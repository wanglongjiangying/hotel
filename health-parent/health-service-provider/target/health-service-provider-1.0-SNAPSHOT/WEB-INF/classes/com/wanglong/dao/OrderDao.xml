<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanglong.dao.OrderDao">

    <resultMap id="baseResultMap" type="com.wanglong.pojo.Order">
        <id column="id" property="id"/>
        <result column="member_id" property="memberId"/>
        <result column="orderDate" property="orderDate"/>
        <result column="orderType" property="orderType"/>
        <result column="orderStatus" property="orderStatus"/>
        <result column="setmeal_id" property="setmealId"/>
    </resultMap>

    <select id="findOrderByCondition" parameterType="com.wanglong.pojo.Order" resultMap="baseResultMap">
        select * from t_order

        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="memberId != null">
                and member_id = #{memberId}
            </if>
            <if test="orderDate != null">
                and orderDate = #{orderDate}
            </if>
            <if test="orderType != null">
                and orderType = #{orderType}
            </if>
            <if test="orderStatus != null">
                and orderStatus = #{orderStatus}
            </if>
            <if test="setmealId != null">
                and setmeal_id = #{setmealId}
            </if>
        </where>
    </select>

    <!--新增-->
    <insert id="add" parameterType="com.wanglong.pojo.Order">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into t_order(member_id,orderDate,orderType,orderStatus,setmeal_id)
        values (#{memberId},#{orderDate},#{orderType},#{orderStatus},#{setmealId})
    </insert>

    <select id="findById" parameterType="Integer" resultType="Map">
        SELECT o.`orderDate` orderDate,o.`orderType` orderType,s.`name` setmeal,m.`name` member
	FROM t_order o,t_member m,t_setmeal s
		WHERE o.id=#{orderId} AND o.`member_id`=m.`id` AND o.`setmeal_id`=s.`id`;
    </select>

    <select id="todayOrderNumber" parameterType="string" resultType="int" >
        SELECT COUNT(id)
        FROM t_order  WHERE orderDate =#{today} ;
    </select>

    <select id="todayVisitsNumber" parameterType="string" resultType="int" >
        SELECT COUNT(id)
        FROM t_order  WHERE orderDate =#{today} and orderStatus='已到诊' ;
    </select>

    <select id="thisWeekOrderNumber" parameterType="string" resultType="int" >
        SELECT COUNT(id)
        FROM t_order  WHERE orderDate &gt;=#{zhouyi} ;
    </select>

    <select id="thisWeekVisitsNumber" parameterType="string" resultType="int" >
        SELECT COUNT(id)
        FROM t_order  WHERE orderDate &gt;=#{zhouyi} and orderStatus='已到诊' ;
    </select>

    <select id="thisMonthOrderNumber" parameterType="string" resultType="int" >
         SELECT COUNT(id)
        FROM t_order  WHERE orderDate &gt;=#{yueFirstDay} ;
    </select>

    <select id="thisMonthVisitsNumber" parameterType="string" resultType="int" >
         SELECT COUNT(id)
        FROM t_order  WHERE orderDate &gt;=#{yueFirstDay} and orderStatus='已到诊' ;
    </select>
</mapper>